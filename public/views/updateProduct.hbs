{{#if title}}
  <div class="container p-4 my-5 bg-light">
    <h3 style="background-color:aquamarine">El producto id {{id}} fue modificado</h3><br>
    <h3 style="color:blue">Detalle</h3><br>
    <table class="table table-dark">
      <thead>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Categoría</th>
        <th>Foto</th>
      </thead>
      <tbody>
          <tr>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{price}}</td>
            <td>{{category}}</td>
            <td><img src="{{thumbnail}}" height="50rem"></td>
          </tr>
      </tbody>
    </table>
    <form action="/productos/" method="GET" id="" >
      <button type="submit" class="btn btn-primary">Volver a la lista de productos</button>
    </form>
  </div>
{{else}}
  <div class="container p-5 my-5 bg-light">
    <h1 style="color:blue">Ingrese nuevos datos del producto a modificar (id: {{id}})</h1>
    <form action="/productos/put/{{id}}" method="POST" id="form">
      <div class="mb-3 mt-3">
        <label for="title" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="name" placeholder="Ingrese el nombre del producto" name="title" required>
      </div>
      <div class="mb-3 mt-3">
        <label for="description" class="form-label">Descripción</label>
        <input type="text" class="form-control" id="description" placeholder="Ingrese la descripción del producto" name="description" required>
      </div>
      <div class="mb-3">
        <label for="photo" class="form-label">Foto URL</label>
        <input type="url" class="form-control" id="image" placeholder="Ingrese imagen" name="thumbnail" required>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Precio</label>
        <input type="number" class="form-control" id="price" placeholder="Ingrese precio" name="price" required>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">Categoría</label>
        <input type="text" class="form-control" id="category" placeholder="Ingrese la categoría del producto" name="category" required>
      </div>
      <button type="submit" class="btn btn-success" id="send">Aceptar modificación de producto</button>
      <div id="listaProductos"></div>
    </form>
  </div>
{{/if}}