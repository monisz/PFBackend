<div class="container p-3 my-4 bg-light">
  <h2 style="color:blue">Registro de Usuario</h2>
  <form action="/register" method="POST" id="register" >
    <div class="mb-3 mt-3">
      <label for="email" class="form-label">Ingrese su email</label>
      <input type="email" class="form-control" id="email" placeholder="Ingrese su email" name="username" required/>
    </div>
    <div class="mb-3 mt-3">
      <label for="password" class="form-label">Ingrese su contraseña</label>
      <input type="password" class="form-control" id="password" placeholder="Ingrese su contraseña" name="password" required/>
    </div>
    <div class="mb-3 mt-3">
      <label for="password" class="form-label">Ingrese nuevamente su contraseña</label>
      <input type="password" class="form-control" id="password2" placeholder="Ingrese su contraseña" name="password2" required/>
    </div>
    <div class="mb-3 mt-3">
      <label for="name" class="form-label">Ingrese su nombre y apellido</label>
      <input type="text" class="form-control" id="name" placeholder="Ingrese su nombre" name="name" required/>
    </div>
    <div class="mb-3 mt-3">
      <label for="address" class="form-label">Ingrese su domicilio</label>
      <input type="text" class="form-control" id="address" placeholder="Ingrese su domicilio" name="address" required/>
    </div>
    <div class="mb-3 mt-3">
      <label for="phone" class="form-label">Ingrese su número telefónico</label>
      <input type="tel" class="form-control" id="phone" placeholder="Ingrese su teléfono" name="phone" required/>
    </div>
    <button type="submit" class="btn btn-primary">Registrarse</button>
  </form>
  <h2 style="color:green">{{registerSuccess}}</h2>
  <br/>
  <form action="/login" method="GET" id="login" >
    <button type="submit" class="btn btn-primary">Ir a Login</button>
  </form>
</div>