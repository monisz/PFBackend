<div class="container p-1 my-4" style="background-color:rgb(165, 217, 250)">
  <form class="row g-3" action="/logout" method="GET">
    <div class="container p-3 my-4 col-sm-8">
      <h5 style="color:blue">Usuario</h5>
      <p><b>email: </b>{{user.username}}</p>
      <p><b>Nombre: </b>{{user.name}}</p>
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-warning" id="logout">Desloguear</button>
    </div>
  </form>
</div>

<div class="container p-3 my-4 bg-light" style="display:flex; justify-content:space-around">
    <form action="/productos" method="GET" id="" >
        <button type="submit" class="btn btn-primary">Volver a productos</button>
    </form>
    <form action="/carrito/{{idCart}}" method="GET" id="" >
        <button type="submit" class="btn btn-primary">Carrito</button>
    </form>
</div>

<div class="container p-4 my-5 bg-light" id="">
  {{#if productsInCart}}
    {{#if orderNumber}}
      <h1 style="color:blue">Orden de Compra Nº {{orderNumber}}</h1><br>
      <h1 style="color:blue">Detalle de la orden</h1><br>
    {{else}}
      <h1 style="color:blue">Tu carrito</h1><br>
    {{/if}}  
    {{#if cartModified}}
      <h3 style="background-color:aquamarine">El producto elegido se agregó al carrito</h3><br>
    {{/if}}  
    <table class="table table-dark">
      <thead>
        <th>Código</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Foto</th>
      </thead>
      <tbody>
        {{#each productsInCart}}
          <tr>
            <td>{{code}}</td>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td>{{cant}}</td>
            <td><img src="{{thumbnail}}" height="50rem"></td>
          </tr>
        {{/each}}    
      </tbody>
    </table>
    {{#if orderNumber}}
      <h2 style="color:blue">Total de la Orden de Compra $ {{totalOrder}}</h2><br>
      <h3 style="background-color:aquamarine">Gracias por su compra</h3><br>
    {{else}}
      <form action="/carrito/compra" method="POST" id="" >
        <button type="submit" class="btn btn-primary">Finalizar compra</button>
      </form>
    {{/if}} 
  {{else}}
    <h3 style="background-color:aquamarine">El carrito está vacío</h3><br>
  {{/if}}
</div>