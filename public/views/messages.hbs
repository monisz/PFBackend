<div class="container p-3 my-4 bg-light">
  <h2 style="color:blue">Centro de mensajes</h2>
  <form onsubmit="return sendMessage()">
    {{#if messagesByEmail}}
      <div>
        {{#each messagesByEmail}}
        <p>
          <strong style="color:blue">{{type}}</strong>
          <strong style="color:blue">{{email}}</strong>
          <span style="color:brown">{{timestamp}}</span>
          <i style="color:green"> : {{messageBody}}</i>
        </p>
        {{/each}}
      </div>
    {{else}}
      {{#if notMessagesByEmail}}
        <h3 style="background-color:aquamarine">No existen mensajes de  {{email}}</h3><br>
      {{else}}
        <div id="messages"></div>
      {{/if}}
    {{/if}}
    <h4 style="color:green">Escribe tu mensaje</h4>
    <h4 id="messageType">{{messageType}}</h4>
    <h4 id="username">{{user.username}}</h4>
    <div class="mb-3 mt-3">
      <input type="text" class="form-control" id="text" placeholder="IngresÃ¡ un mensaje" required/>
    </div>
    <button type="submit" class="btn btn-primary">Enviar mensaje</button>
  </form>
  <form action="/chat/{{user.username}}" method="GET" id="" >
    <button type="submit" class="btn btn-primary">Ver solo mis mensajes</button>
  </form>
</div>
